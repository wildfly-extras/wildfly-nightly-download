{
  "name": "org.wildfly.download.action",
  "version": "1.0.0",
  "description": "A GitHub Action to download a nightly build of WildFly or the nightly Maven Repository",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run format:write && npm run package",
    "format:write": "prettier --no-error-on-unmatched-pattern --config ./.prettierrc.cjs --write \"**/*.{js,yml,yaml}\"",
    "format:check": "prettier --no-error-on-unmatched-pattern --config ./.prettierrc.cjs --check \"**/*.{js,yml,yaml}\"",
    "package": "npx ncc build src/index.js -m -o dist/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "author": "James R. Perkins",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.2",
    "prettier": "^3.3.3"
  }
}
